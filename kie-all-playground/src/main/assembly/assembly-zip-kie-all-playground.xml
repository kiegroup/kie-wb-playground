<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>project</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <useDefaultExcludes>false</useDefaultExcludes>
      <includes>
        <include>*/pom.xml</include>
      </includes>
      <excludes>
        <exclude>kie-*/pom.xml</exclude>
      </excludes>
      <directory>target/kie-all-playground-xslt</directory>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>../</directory>
      <useDefaultExcludes>false</useDefaultExcludes>
      <includes>
        <include>curriculumcourse/**</include>
        <include>dinnerparty/**</include>
        <include>employee-rostering/**</include>
        <include>evaluation/**</include>
        <include>mortgages/**</include>
        <include>optacloud/**</include>
        <include>traffic-violation/**</include>
        <include>itorders/**</include>
        <include>mortgage-process/**</include>
      </includes>
      <excludes>
        <exclude>**/*.iws</exclude>
        <exclude>**/*.ipr</exclude>
        <exclude>**/*.iml</exclude>
        <exclude>*/nbproject/**</exclude>
        <exclude>**/.idea/**</exclude>
        <exclude>*/.gitignore</exclude>
        <exclude>*/target/**</exclude>
        <exclude>*/pom.xml</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>

<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>project</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>

    <fileSet>
      <useDefaultExcludes>false</useDefaultExcludes>
      <includes>
        <include>*/pom.xml</include>
      </includes>
      <directory>target/kie-wb-playground-xslt</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <useDefaultExcludes>false</useDefaultExcludes>
      <includes>
        <include>curriculumcourse/**</include>
        <include>employee-rostering/**</include>
        <include>evaluation/**</include>
        <include>mortgages/**</include>
        <include>optacloud/**</include>
        <include>itorders/**</include>
      </includes>
      <excludes>
        <exclude>**/*.iml</exclude>
        <exclude>*/.gitignore</exclude>
        <exclude>*/target/**</exclude>
        <exclude>*/pom.xml</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.build.directory}/kie-wb-playground-xslt/itorders/pom.xml</source>
      <outputDirectory>/itorders</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
</assembly>
